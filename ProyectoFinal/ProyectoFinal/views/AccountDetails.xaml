<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.AccountDetails">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="userName" Placeholder="Usuario"/>
            <Entry x:Name="oldpassword" Placeholder="Contraseña Actual"/>
            <Entry x:Name="userPassword" Placeholder="Nueva Contraseña"/>
            <Entry x:Name="userPasswordRepeat" Placeholder="Repetir Nueva Contraseña"/>

            <Button Text="Guardar" x:Name="savedata" Clicked="savedata_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>