<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.ChangePassword">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#C0C8D1">
            <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.8, 0.5" AbsoluteLayout.LayoutFlags="All" Padding="9" BackgroundColor="#B3000000">
                <Label Text="A su dirección de correo electronico le habrá llegado un código de 6 digitos para poder cambiar su clave."
                       TextColor="White"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="Code" Placeholder="Ingrese el código de 6 digitos"/>
                <Entry x:Name="password" Placeholder="Nueva contraseña"/>
                <Entry x:Name="passwordRepeat" Placeholder="Repita la contraseña"/>
                <Button x:Name="SendData" Text="Cambiar Contraseña" Clicked="SendData_Clicked"/>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>