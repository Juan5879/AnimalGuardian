<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.AddContentToForum">
    <StackLayout BackgroundColor="#E4F4F1">
        <Frame Padding="10"
               CornerRadius="30"
               BackgroundColor="#91D6BD">
            <StackLayout>
                <Label Text="Agrega un tema de discución o contribución al foro."
                       FontAttributes="Bold"
                       FontSize="20" 
                       HorizontalOptions="CenterAndExpand"/>
                <Entry x:Name="forumTitle"
                       Placeholder="Sobre que quieres publicar?"/>
                <Editor x:Name="forumContent"
                        Placeholder="Profundiza en el tema..."
                        MaxLength="2000"
                        HeightRequest="200"
                        VerticalOptions="StartAndExpand"/>

            </StackLayout>
        </Frame>
        <Button x:Name="post"
                Text="Publicar"
                Clicked="post_Clicked"
                CornerRadius="30"
                VerticalOptions="End"
                BackgroundColor="#2A5D50"/>
    </StackLayout>
</ContentPage>