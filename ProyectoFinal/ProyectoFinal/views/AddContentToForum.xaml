<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.AddContentToForum">
    <StackLayout Background="#A3DDAA">
        <Frame VerticalOptions="CenterAndExpand"
       HorizontalOptions="CenterAndExpand"
       Margin="5"
       BackgroundColor="Black"
       Opacity="0.8"
       CornerRadius="15">
            <StackLayout>
                <Label Text="Agrega un tema de discución o contribución al foro." HorizontalOptions="Center" FontAttributes="Bold"/>
                <Entry x:Name="forumTitle" Placeholder="Sobre que quieres publicar?"/>
                <Entry x:Name="forumContent" Placeholder="Profundiza en el tema..." MaxLength="2000"/>
                <Button x:Name="post" Text="Publicar" Clicked="post_Clicked"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>