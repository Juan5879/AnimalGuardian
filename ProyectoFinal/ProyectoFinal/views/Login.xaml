<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.Login">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#C0C8D1">
            <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.8, 0.5" AbsoluteLayout.LayoutFlags="All" Padding="9" BackgroundColor="#B3000000">
                <Label Text="Iniciar Sesion" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                <Entry x:Name="user" Placeholder="Usuario o Email"/>
                <Entry x:Name="password" Placeholder="Contraseña" IsPassword="True"/>
                <Button x:Name="btn_login" Text="Ingresar" Clicked="Btn_login"/>
                <Button x:Name="btn_nav_register" Text="Registrarse" Clicked="Btn_nav_register"/>
                <Button x:Name="btn_nav_recoverypass" Text="Recuperar Contraseña" Clicked="Btn_nav_recoverypass"/>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>