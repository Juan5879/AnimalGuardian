<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="ProyectoFinal.views.enclosurePet">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#A3DDAA">

            <StackLayout VerticalOptions="CenterAndExpand"
             HorizontalOptions="CenterAndExpand">
                <Grid BackgroundColor="Transparent"
          Margin="10, 15, 10, 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="285"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Frame Grid.Column="0"
               Padding="0"
               BackgroundColor="#7e611b"
               CornerRadius="15">
                        <SearchBar Placeholder="Que está buscando..."
                       TextChanged="SearchBar_TextChanged"
                       Keyboard="Chat"/>

                    </Frame>

                    <Button BackgroundColor="#3e2214"
                Grid.Column="1"
                x:Name="btn_addPet"
                Clicked="btn_addPet_Clicked"
                CornerRadius="100"
                Text="+"
                FontSize="22"/>
                </Grid>


                <ListView x:Name="lstPets"
              ItemSelected="lstPets_ItemSelected"
              HasUnevenRows="True"
              HeightRequest="400">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Frame CornerRadius="30"
                               Padding="0"
                               Margin="5, 5">
                                        <Grid Padding="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="22"/>
                                                <RowDefinition Height="19"/>
                                                <RowDefinition Height="19"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Frame Grid.RowSpan="3"
                                       CornerRadius="50"
                                       WidthRequest="100"
                                       HeightRequest="100"
                                       HasShadow="False"
                                       Padding="0">
                                                <Image Source="{Binding Image}"
                                              Aspect="AspectFill"
                                              WidthRequest="100"
                                              HeightRequest="100"/>
                                            </Frame>
                                            <Label Text="{Binding Name}"
                                       LineBreakMode="WordWrap"
                                       TextColor="Black"
                                       FontSize="17"
                                       FontAttributes="Bold"
                                       Grid.Column="1"/>
                                            <Label Text="{Binding Description}"
                                       FontAttributes="Italic"
                                       LineBreakMode="WordWrap"
                                       HeightRequest="20"
                                       TextColor="Black"
                                       Grid.Row="1"
                                       Grid.Column="1"/>
                                        </Grid>
                                    </Frame>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>




















