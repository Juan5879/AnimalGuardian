<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.enclosurePet">
    <!--lista de contenido donde se ubican todas las mascotas.-->
    <StackLayout>
        <Grid BackgroundColor="Gray"
              Margin="10, 10, 10, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Proxima barra de busqueda-->
            <Frame Grid.Column="0"
                   Margin="0, 0, 4, 0">
            </Frame>

            <!--Botón para agrear mascotas-->
            <Button BackgroundColor="Brown"
                    Grid.Column="1"
                    x:Name="btn_addPet"
                    Clicked="btn_addPet_Clicked"/>
        </Grid>
        <ListView x:Name="lstPets"
                  RowHeight="150"
                  BackgroundColor="Gray"
                  Margin="10, 5, 10, 10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackLayout BackgroundColor="Transparent">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding IdPet}" Grid.Row="0" Grid.Column="0" TextColor="Blue"/>
                            <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="1" TextColor="Gray"/>
                            <Label Text="{Binding Description}" Grid.Row="1" Grid.ColumnSpan="2" TextColor="Green"/>
                        </Grid>
                    </StackLayout>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
