<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.views.AddPet">
    <StackLayout Background="#C0C8D1">
        <Frame VerticalOptions="CenterAndExpand"
               HorizontalOptions="CenterAndExpand"
               Margin="5"
               BackgroundColor="Black"
               Opacity="0.8"
               CornerRadius="15">
            <StackLayout>
                <Label Text="Agrega al nuevo integrante" HorizontalOptions="Center" FontAttributes="Bold"/>
                <Entry x:Name="petName" Placeholder="Nombre"/>
                <Entry x:Name="petDescription" Placeholder="Notas"/>
                <Button x:Name="btn_SavePet" Text="Agregar al recinto!" Clicked="Btn_SavePet"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>